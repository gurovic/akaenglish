from tkinter import *
root=Tk()
root.title('Тест Python')
root.geometry('1000x600+300+200')
root.resizable(False, False)
#text1=Text(root,height=1, x = 200, y = 50, width=10,font='Arial 14')
#text1.place(x= 100,y= 100)
#a = text1.get('1.0', END)
w = Label(root, text="Здравствуй! Ты попал на тест по основам программы Python.", font = 'arial 14')
w1 = Label(root, text="Ответь на заданные вопросы одним словом (или числом) или выбери правильный вариант.", font = 'arial 14')
btn = Button(root,text='Начать!',width=35, height=5, font='arial 25', command = w.destroy )
w.place(x = 180, y = 60)
w1.place(x = 140, y = 100)
btn.place(x = 200, y = 300)

#print(a)



root.mainloop()
